<%- include('../layouts/main') %>

<div class="container">
  <h1>Your Chats</h1>
  <ul>
    <% chats.forEach(chat => { %>
    <li>
      <h3>
        <a href="/chats/<%= chat._id %>"
          >Chat with AI - <%= new Date(chat.createdAt).toLocaleString() %></a
        >
      </h3>
      <p>
        Last Message: <%= chat.messages[chat.messages.length -
        1].content.substring(0, 50) %>...
      </p>
      <form action="/chats/<%= chat._id %>?_method=DELETE" method="POST">
        <button type="submit">Delete</button>
      </form>
    </li>
    <% }) %>
  </ul>
</div>
