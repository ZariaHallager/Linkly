<%- include('../layouts/main') %>

<div class="container">
  <h1>All Users</h1>
  <ul>
    <% users.forEach(user => { %>
    <li>
      <a href="/users/<%= user._id %>"><%= user.name %></a>
      <p>Email: <%= user.email %></p>
      <form action="/users/<%= user._id %>?_method=DELETE" method="POST">
        <button type="submit">Delete</button>
      </form>
    </li>
    <% }) %>
  </ul>
</div>
