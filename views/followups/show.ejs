<%- include('../layouts/main') %>

<div class="container">
  <h1>Follow-Up Details</h1>
  <h2><%= followup.title %></h2>
  <p><strong>Description:</strong> <%= followup.description %></p>
  <p>
    <strong>Date:</strong> <%= new Date(followup.date).toLocaleDateString() %>
  </p>

  <a href="/followups/<%= followup._id %>/edit">Edit Follow-Up</a>

  <form action="/followups/<%= followup._id %>?_method=DELETE" method="POST">
    <button type="submit">Delete Follow-Up</button>
  </form>
</div>
