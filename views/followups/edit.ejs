<%- include('../layouts/main') %>

<div class="container">
  <h1>Edit Follow-Up</h1>
  <form action="/followups/<%= followup._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="title">Title:</label>
      <input
        type="text"
        id="title"
        name="title"
        value="<%= followup.title %>"
        required
      />
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      <textarea id="description" name="description" required>
<%= followup.description %></textarea
      >
    </div>
    <div class="form-group">
      <label for="date">Follow-Up Date:</label>
      <input
        type="date"
        id="date"
        name="date"
        value="<%= new Date(followup.date).toISOString().split('T')[0] %>"
        required
      />
    </div>
    <button type="submit">Update Follow-Up</button>
  </form>
</div>
